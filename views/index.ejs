<div class="jumbotron">
	<div class="inner">
		
		<div class="logo">
			<img src="images/logo.svg" class="logo" alt="CHE hacks logo">	
		</div>

		<div class="text">
			<h2><small>May 16 - 17, 2015</small></h2>	
			<h1><strong>Open the Door to Programming</strong></h1>
		</div>

		<div class="signup">

			<%if (showForm) { %>
			<form action="/" method="post">
				<div class="row">
					<div class="emailContainer">
						<input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
					</div>
					<button type="submit" class="btn btn-default">Stay Informed</button>
				</div>
			</form>
			<% } %>

			<%if (typeof email != 'undefined') { %>
				<h1><em><%- email %></em></h1>
			<% } %>
		</div>

	</div>
</div>

<div class="sections">
	<div class="section mission">
		<header class="h1">
			<h1>Come Learn to Code</h1>
			<h2>All in 24 hours</h2>
		</header>
		<div class="container-fluid">
			<h1>Learn to code with mentors and friends.</h1>
			<h1>You bring the attitude, we'll bring the rest.</h1>
			<h1>More seasoned? No problem, we've got you covered too.</h1>
